{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "lib",
    "rootDir": "src",
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src/**/*"]
}
